{% block javascripts %}
	<script>
		$("#commentForm").submit(function (e) {
e.preventDefault();
var form = $(this).serialize();
$.ajax({
url: "{{ path('comment_submit') }}",
type: 'post',
data: form,
success: function (response) {
var status = '';
if (response === 'success') {
$(".comment-status").html("<p style='color:green;'>Comment Will Display After Approval</p>");
}
status = '';
}
});
})
	</script>

	<script>
		$("#modal-form").submit(function(e){
			e.preventDefault();
			var form = $(this).serialize();
		$.ajax({
  url: "{{ path('hf_login_submit') }}",
  type: 'post',
  data: form,
  success: function(response){
	window.location.assign(response);
	}
});
}) 
	</script>
