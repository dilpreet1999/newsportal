								{% endfor %}

							</div>
							<div class="row">
								{% set stories = getStories() %}
								{% for s in stories %}
									<div class="col-md-6">
										<div class="box-blog">
											<div class="images">
												<span class="cat">{{ s.category.name }}</span>
												<img src="{{asset('images/SCIENCE.jpg')}}">
											</div>
											<div class="content">
												<h6>
													<i class="far fa-clock"></i>
													MARCH 13, 2018</h6>
												<h2>{{s.title}}</h2>
												<div class="box-blog-footer">
													<p><img src="{{ asset('images/1.jpeg')}}">
