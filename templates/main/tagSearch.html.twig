{% extends "base.html.twig" %}
{% block body %}
    {% if posts  %}
    {% set tags = getTags(posts) %}
    <div class="container">
        <div class="col-sm-12 col-md-12 ">
            <section class="mysection">
                <div class="col-sm-4">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a style="color: #e12b2b;" href="/">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">{{val}}</li>
                        </ol>
                    </nav>
                </div>
                <h2>
                    Tag: {{ val|upper }}
                </h2>
                {% set count = posts|length %} {% if count %}
                <div class="middle_inner">
                    <div class="content_wrap fullwidth">
                        <!-- Start Content -->
                        <div class="middle_content entry">
                            <div class="cmsmasters_search">
                                {% for p in posts %} {% set img = p.id|getStoryImg %}
                                <article id="post-13430" class="cmsmasters_archive_type post-13430 post type-post status-publish format-standard has-post-thumbnail hentry category-travel tag-featured">
                                    <div class="cmsmasters_archive_item_img_wrap">
                                        <div class="cmsmasters_archive_item_type">
                                            <span>Post</span>
                                        </div>
                                        <figure class="cmsmasters_img_wrap">
                                            <a href="{{path('story_view',{id: p.id,slug: p.title|slug})}}" title="{{ p.title }}" class="cmsmasters_img_link preloader">
                                {% if img %}
                                
                                
                                <img width="360"
                                  height="360"
                                  src="{{ path('story_images_view',{'id':img.id,'size':360,'name':img.fileName}) }}"
                                  class="full-width wp-post-image"
                                  alt="blog6"
                                  loading="lazy"
                                  title="blog6"
                                  srcset="{{ path('story_images_view',{'id':img.id,'size':360,'name':img.fileName}) }} 360w, {{ path('story_images_view',{'id':img.id,'size':360,'name':img.fileName}) }} 150w, {{ path('story_images_view',{'id':img.id,'size':360,'name':img.fileName}) }} 120w, {{ path('story_images_view',{'id':img.id,'size':360,'name':img.fileName}) }} 60w"
                                  sizes="(max-width: 360px) 100vw, 360px" />
                                {% else %}
                                <img width="360"
                                height="360"
                                src="https://magazilla.cmsmasters.net/wp-content/uploads/2018/03/blog6-360x360.jpg"
                                class="full-width wp-post-image"
                                alt="blog6"
                                loading="lazy"
                                title="blog6"
                                srcset="https://magazilla.cmsmasters.net/wp-content/uploads/2018/03/blog6-360x360.jpg 360w, https://magazilla.cmsmasters.net/wp-content/uploads/2018/03/blog6-150x150.jpg 150w, https://magazilla.cmsmasters.net/wp-content/uploads/2018/03/blog6-120x120.jpg 120w, https://magazilla.cmsmasters.net/wp-content/uploads/2018/03/blog6-60x60.jpg 60w"
                                sizes="(max-width: 360px) 100vw, 360px" />
                                {% endif %}
                                
                              </a>
                                        </figure>
                                    </div>
                                    <div class="cmsmasters_archive_item_cont_wrap">
                                        <div class="cmsmasters_archive_item_info entry-meta">
                                            <span class="cmsmasters_archive_item_date_wrap">
                                <abbr class="published cmsmasters_archive_item_date"
                                  title="{{ p.createdOn|date('F m , Y') }}">
                                  {{ p.createdOn|date('F m, Y') }}
                                </abbr><abbr class="dn date updated"
                                  title="September 30, 2019">
                                  September 30, 2019
                                </abbr>
                              </span><span class="cmsmasters_archive_item_user_name">
                                by <a href="https://magazilla.cmsmasters.net/author/cmsmasters/"
                                  rel="author"
                                  title="Posts by cmsmasters">
                                  {% if p.user %}
                                    {{ p.user.name }}
                                  {% else %}
                                    Admin
                                  {% endif %}
                                </a>
                              </span><span class="cmsmasters_archive_item_category">
                                In <a href="{{path('story_by_category',{id: p.category.id,slug: p.category.name})}}" style="padding: 2px 10px 2px 10px;color: white" class="cmsmasters_cat_color cmsmasters_cat_27" rel="category tag">{{
                                    p.category.name
                                  }}</a>
                              </span>
                                        </div>
                                        <header class="cmsmasters_archive_item_header entry-header">
                                            <h2 class="cmsmasters_archive_item_title entry-title">
                                                <a href="{{path('story_view',{id: p.id,slug: p.title|slug})}}">
                                  {{ p.title }}
                                </a>
                                            </h2>
                                        </header>
                                        <div class="cmsmasters_archive_item_content entry-content">
                                            <p>
                                                {% set description = wordWrap(p.body) %} {{ description|raw }}
                                            </p>
                                        </div>
                                    </div>
                                </article>
                                {% endfor %}
    
                                <div style="margin:10px;" class="cmsmasters_wrap_pagination"> {{ knp_pagination_render(posts) }}
                                </div>
                            </div>
                        </div>
                        <!-- Finish Content -->
                    </div>
                </div>
    
                {% else %}
                <p>
                    No Result Found
                </p>
                {% endif %}
            </section>
        </div>
    </div>
{% endif %}
{% endblock %}