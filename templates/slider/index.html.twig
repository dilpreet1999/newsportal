{% extends 'admin/base.html.twig' %}

{% block title %}Slider index{% endblock %}

{% block body %}
    <h1>Slider index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Header</th>
                <th>Description</th>
                <th>TextColor</th>
                <th>Url</th>
                    {# <th>FileData</th>
                     <th>FileType</th>
                     <th>FileName</th>#}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for slider in sliders %}
                <tr>
                    <td>{{ slider.id }}</td>
                    <td>{{ slider.header }}</td>
                    <td>{{ slider.description }}</td>
                    <td>{{ slider.textColor }}</td>
                    <td>{{ slider.url }}</td>
                    <td>
                        <a href="{{ path('slider_show', {'id': slider.id}) }}">show</a>
                        <a href="{{ path('slider_edit', {'id': slider.id}) }}">edit</a>
                    </td>
                </tr>
                <tr>
                    <td colspan="6">
                        <img src="{{ path('slider_image',{'id':slider.id,'size':300,'filename':slider.fileName}) }}">
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('slider_new') }}">Create new</a>
{% endblock %}
